{
  "experiment_path": "ddpm_pretraining/ddpm_pretraining_experiments",
  "model_for_inference": "",
  "model": {
    "unet": {
      "channel_mults": [
        1,
        2,
        4,
        8
      ],
      "attn_res": 32,
      "num_head_channels": 4,
      "res_blocks": 4,
      "self_condition": true
    },
    "beta_schedule": {
      "train": {
        "schedule": "linear",
        "n_timestep": 500,
        "linear_start": 0.0001,
        "linear_end": 0.02
      },
      "test": {
        "schedule": "linear",
        "n_timestep": 500,
        "linear_start": 0.0001,
        "linear_end": 0.02
      }
    },
    "lr": 0.0001,
    "optimizer": "adamw",
    "loss_type": "l2",
    "use_ema": true,
    "iterations": 3000,
    "freq_metrics": 2000,
    "freq_checkpoint": 2000,
    "continue_training": false,
    "early_stopping": {
      "patience": 10,
      "min_delta": 0.0001,
      "validation_freq": 2000
    }
  },
  "dataset": {
    "name": "chest",
    "path": "datasets/",
    "image_size": 256,
    "image_channels": 1,
    "batch_size": 8,
    "grad_accumulation": 4,
    "num_workers": null,
    "pin_memory": true
  }
}
